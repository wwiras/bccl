FROM ubuntu:22.04

# Set the working directory inside the container
WORKDIR /app

# Install required packages
# - python3, python3-pip: Python and its package manager
# - build-essential: Needed for compiling some Python packages
# - wget: Used here to download the required empty.proto file
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    build-essential \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install network utils for debugging
RUN apt-get install -y iputils-ping dnsutils iproute2

# Copy your application source code and proto file into the image
# This also copies your gossip.proto file, which is needed for compilation
COPY . /app

# Install Python packages, including grpcio-tools for compilation
RUN pip3 install --no-cache-dir grpcio grpcio-tools kubernetes

# --- Protobuf Compilation Step ---
# This is a crucial addition to make the Dockerfile self-contained.
# 1. Ensure the directory for the imported proto is available.
# 2. Run the protoc compiler to generate the Python stubs.
#RUN mkdir -p /app/google/protobuf && \
#    wget -O /app/google/protobuf/empty.proto https://raw.githubusercontent.com/protocolbuffers/protobuf/main/src/google/protobuf/empty.proto && \
#    python3 -m grpc_tools.protoc -I. --python_out=. --grpc_python_out=. gossip.proto

# Expose the port the app runs on
EXPOSE 5050

# Command to run the application
# Assuming 'node_future.py' is the name of your final async-based script
CMD ["python3", "node_asyncio.py"]